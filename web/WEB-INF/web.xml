<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>点餐系统</display-name>

    <!--处理商家信息接口-->
	<servlet>
		<servlet-name>merchant</servlet-name>
		<servlet-class>com.system.servlet.controller.MerchantServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>merchant</servlet-name>
		<url-pattern>/merchant</url-pattern>
	</servlet-mapping>
    <!--处理用户信息接口-->
	<servlet>
		<servlet-name>user</servlet-name>
		<servlet-class>com.system.servlet.controller.UserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>user</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>
    <!--处理菜品接口-->
    <servlet>
        <servlet-name>dish</servlet-name>
        <servlet-class>com.system.servlet.controller.DishServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dish</servlet-name>
        <url-pattern>/dish</url-pattern>
    </servlet-mapping>

	<!--配置拦截器,拦截登录接口-->
	<filter>
		<filter-name>filter</filter-name>
		<filter-class>com.system.servlet.WebFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>filter</filter-name>
		<url-pattern>/user</url-pattern>
	</filter-mapping>
</web-app>
